<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main theme used after splash -->
    <!-- Compose Material3 does not ship XML themes; use Material Components as the base Activity theme. -->
    <style name="Theme.TeamCompass" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Android 12+ splash screen theme -->
    <style name="Theme.TeamCompass.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/tc_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_compass</item>
        <item name="windowSplashScreenAnimationDuration">350</item>
        <item name="postSplashScreenTheme">@style/Theme.TeamCompass</item>
    </style>

</resources>
